@model BennetVellaSecureSoftware.Models.AspNetRole

@{
    ViewBag.Title = "Remove";
}

<h2>User Management</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Remove Role</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Role", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Id", null, "Select Role", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Remove" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@if (ViewBag.Message != null)
{<h5>@ViewBag.Message</h5>}

<div>
    @Html.ActionLink("Back to User List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
